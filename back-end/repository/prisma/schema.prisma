datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    userId     String   @id
    username   String
    globalName String
    userAvatar String
    guilds     Guild[]  @relation("UserGuilds")
    guildIds   String[]
    boards     Board[]
    tasks      Task[]
}

model Guild {
    guildId   String   @id
    guildName String
    settings  Json
    roles     Role[]
    roleIds   String[]
    members   Json
    users     User[]   @relation("UserGuilds")
    userIds   String[]
    boards    Board[]
    boardIds  String[]
}

model Role {
    roleId      String @id
    roleName    String
    permissions Json
    guild       Guild  @relation(fields: [guildId], references: [guildId])
    guildId     String
}

model Board {
    boardId         String   @id @default(cuid())
    boardName       String
    createdByUser   User     @relation(fields: [createdByUserId], references: [userId])
    createdByUserId String
    guild           Guild    @relation(fields: [guildId], references: [guildId])
    guildId         String
    columns         Column[]
    columnIds       String[]
    permissions     Json
}

model Column {
    columnId    String   @id @default(cuid())
    columnName  String
    columnIndex Int
    tasks       Task[]
    taskIds     String[]
    board       Board    @relation(fields: [boardId], references: [boardId])
    boardId     String
}

model Task {
    taskId      String   @id @default(cuid())
    title       String
    description String
    dueDate     DateTime
    assignees   User[]
    assigneeIds String[]
    column      Column   @relation(fields: [columnId], references: [columnId])
    columnId    String
}
